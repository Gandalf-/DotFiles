#!/bin/bash

# wrapper around xiwi -T for running GUIs in crouton

which "$1" >/dev/null ||
  { echo "error: $1 not found"; exit 1; }

echo "Starting xiwi for \"$*\"..."

xiwi -T "$@" >/dev/null 2>&1
# waiting for ^C

echo; echo "Stopping xiwi for \"$*\"..."

for pid in $(pgrep xiwi); do
  kill -9 "$pid" >/dev/null 2>&1
done
