#!/bin/bash

# shellcheck disable=SC1090,SC1091

# auto_wizard
#
#   regenerates wizard workstation script. you may have to update the sources
#   locations based on where you cloned this

root="$(dirname "${BASH_SOURCE[0]}")"/..
source "${root}/lib/autocli.sh"

name="wizard"
location="${root}/bin/"
sources=(
  "${root}/lib/wizard.sh"
  "${root}/lib/wizard_install.sh"
  "$HOME/scripity-scripts/lib/work_wizard.sh"
  )

autocli::create \
  "$name" \
  "$location" \
  "${sources[@]}"
