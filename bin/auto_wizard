#!/bin/bash

# w
#   regenerates a library if other libraries have changed
#   heavily leverages lib/auto_cli.sh

# shellcheck disable=SC1090,SC1091

root="$(dirname "${BASH_SOURCE[0]}")"/..
source "${root}/lib/autocli.sh"

name="w"
location="${root}/bin/"
sources=( "${root}/lib/wizard.sh" "$HOME/scripity-scripts/lib/work_wizard.sh" )

autocli::create \
  "$name" \
  "$location" \
  "${sources[@]}"
