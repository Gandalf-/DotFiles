alias b='bash'
alias e='echo'
alias h='head'
alias l='ls'
alias p='python'
alias t='task'
alias w='which'
alias v='vim'

alias p3='python3'
alias ls='ls --color=auto'
alias ta='tmux attach; or tmux'
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias hn='head -n'
alias ss='sudo service'
alias pi='ipython'
alias vp='vim -p'
alias vd='vimdiff'
alias vs='vim - ; fg'
alias sv='sudo vim'
alias vv='vim -p *.{h,c{,c,++,xx,pp},java,sh,py,md,html,css,js,php,pl,txt}'
alias lo='locate -A'

alias sai='sudo apt install'
alias kut='cut -d " " -f'
alias aup='sudo apt update; sudo apt upgrade; sudo apt-get autoremove'
